// src/pages/api/openai-realtime.ts
import { Astro } from '@astrojs/core';
import { OpenAIRealtimeAPIBeta } from '@openai/realtime-api-beta';

const astro = new Astro();
const openai = new OpenAIRealtimeAPIBeta({
  apiKey: 'YOUR_OPENAI_API_KEY',
});

astro.get('/openai-realtime', async (req, res) => {
  const response = await openai.get('https://api.openai.com/v1/engines');
  return res.json(response);
});
